@model Epi.Web.MVC.Models.FormResponseInfoModel

                            @if (Model.CurrentPage != 1)// this section builds the previous link
                            {
                            @Html.Raw(" " + @Html.ActionLink(
                                                            "<", 
                                                            "Index",
                                                            new { surveyid = Model.FormInfoModel.FormId, pagenumber = Model.CurrentPage - 1 },
                                                            new { name= "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = Model.CurrentPage  - 1 })  + " ");
                            }

  @{ var NumberOfPagesDisplayedOnPage = 5;// Number of pages should be displayed of the page, last page however shows  6 pages    
  }                      
                                
                            @if (Model.NumberOfPages < NumberOfPagesDisplayedOnPage)//This section builds the links if number of pages are less than 5.
                            {
                                for (int page = 1; page <= Model.NumberOfPages; page++)
                                {
                                    if (Model.CurrentPage == page)
                                    {
                            @Html.Raw("<span>" + page + "</span>");
                                    }
                                    else
                                    {
                            @Html.Raw(" " + @Html.ActionLink(page.ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = page },

                                                                       new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = page }) + " ");
                                    }
                                }
                            }
                            else //if they are greator than 5
                                if (Model.CurrentPage < NumberOfPagesDisplayedOnPage) // this section builds the links for first 5 pages.
                                {


                                    for (int page = 1; page < NumberOfPagesDisplayedOnPage; page++)
                                    {
                                        if (Model.CurrentPage == page)
                                        {
                            @Html.Raw("<span>" + page + "</span>");
                                        }
                                        else
                                        {
                            @Html.Raw(" " + @Html.ActionLink(page.ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = page },

                                                                       new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = page }) + " ");
                                        }


                                    }
                                }
                                else //this section builds the middle section of number of pages;
                                    if (Model.CurrentPage >= NumberOfPagesDisplayedOnPage && Model.NumberOfPages > Model.CurrentPage + NumberOfPagesDisplayedOnPage)
                                    {
                            @Html.Raw(" " + @Html.ActionLink((Model.CurrentPage - 2).ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = Model.CurrentPage - 2 }, new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = Model.CurrentPage - 2 }) + " "); 
                            @Html.Raw(" " + @Html.ActionLink((Model.CurrentPage - 1).ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = (Model.CurrentPage - 1) }, new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = Model.CurrentPage - 1 }) + " ");
                            @Html.Raw("<span>" + Model.CurrentPage + "</span>");
                            @Html.Raw(" " + @Html.ActionLink((Model.CurrentPage + 1).ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = (Model.CurrentPage + 1) }, new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = Model.CurrentPage + 1 }) + " ");
                            @Html.Raw(" " + @Html.ActionLink((Model.CurrentPage + 2).ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = (Model.CurrentPage + 2) }, new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = Model.CurrentPage + 2 }) + " ");
                                    }

                                    else
                                    {// this section builds the links for for last 5 pages.
                                        for (int page = Model.NumberOfPages - NumberOfPagesDisplayedOnPage; page <= Model.NumberOfPages; page++)
                                        {
                                            if (Model.CurrentPage == page)
                                            {
                            @Html.Raw("<span>" + page + "</span>");
                                            }
                                            else
                                            {
                            @Html.Raw(" " + @Html.ActionLink(page.ToString(), "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = page },

                                                                       new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = page }) + " ");
                                            }
                                        }



                                    }

                            @if (Model.CurrentPage != Model.NumberOfPages)//this section builds the link for next page.
                            {
                            @Html.Raw(" " + @Html.ActionLink(">", "Index", new { surveyid = Model.FormInfoModel.FormId, pagenumber = Model.CurrentPage + 1 }, new { name = "link", data_formid = Model.FormInfoModel.FormId, data_pagenumber = Model.CurrentPage + 1 }) + " ");
                            }
 