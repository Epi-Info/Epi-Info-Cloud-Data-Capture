@model Epi.Web.MVC.Models.SurveyModel  
<div id="Main">
@{

    
   // foreach (var Obj in Model.RelateModel)
    for (int i = 0; Model.RelateModel.Count() > i;i++ )
        {
        
        <div>
        @if(i==0){
                   <p><span style="font-weight:bold;">Parent Response Link:</span></p>
                      @Html.ActionLink("    Parent Response", "Index", "Survey", new { responseid = Model.RelateModel[i].ResponseIds[i], PageNumber = 1 }, new { Class = "RelateLink" })
                       <br />
                    
         }
         else
         {
              if(i==1)
              {
              <p><span style="font-weight:bold;">Relate Form Responses Links:</span></p>
              }
             
               <p>&nbsp;&nbsp;&nbsp;<span style="font-weight:bold;">View Id: @Model.RelateModel[i].ViewId </span></p> 
             int num = 1;
              foreach (var Obj in Model.RelateModel[i].ResponseIds)
                  {
                
                 
           
               <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-weight:normal;">  @Html.ActionLink("Response Number" + num, "Index", "Survey", new { responseid = Obj, PageNumber = 1 }, new { Class = "RelateLink" })</span></p> 	
                         
                  num++;
                  }



         }



          </div>
        }
   }
</div>

