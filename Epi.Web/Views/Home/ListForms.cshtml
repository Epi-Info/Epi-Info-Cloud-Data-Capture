        <td>
        <div class="metro-tile metro-collect metro-prod" >
                    <h3>Test Form</h3>
                </div>
            @foreach (var item in Model)
            {
                var divClass = "metro-tile ";

                if (item.IsOwner)
                {
                    divClass += "metro-design ";
                }
                else
                {
                    divClass += "metro-collect ";
                }

                if (item.IsDraftMode)
                {

                    divClass += "metro-staging";
                }
                else
                {
                    divClass += "metro-prod";
                }
                <button id="@item.FormName" type="submit">
               @*<a href='@Url.Action("Index", "Home", new { formId = item.FormId })'>
